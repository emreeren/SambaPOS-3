<Window x:Class="Samba.Presentation.Controls.Interaction.FeedbackWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Samba POS" ShowInTaskbar="False"
     WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Name="MessageText" Width="350" TextWrapping="Wrap" Grid.Row="0" Text="DENEME 123"
             FontSize="30" Margin="30" />
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" FontSize="30"
             Padding="15" Grid.Row="1" Click="Button_Click" Content="{LocText OK}"/>        
    </Grid>
</Window>